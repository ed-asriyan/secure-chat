<Window x:Class="Chat.SearchUsersInLocalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Поиск компьютеров в локальной сети" Height="370"  WindowStyle="ToolWindow"  MaxWidth="400" MinWidth="400" Width="400" ShowInTaskbar="True" ResizeMode="CanResizeWithGrip">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Content="Найденные устройства" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15"></Label>
        <ScrollViewer Grid.Row="1">
            <StackPanel Name="Items"></StackPanel>
            
        </ScrollViewer>
        <Label Content="Поиск..." Name="lableSearch" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="35" FontFamily="Consolas"></Label>
        
    </Grid>
</Window>
